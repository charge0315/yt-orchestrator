# Server Configuration
PORT=3000
NODE_ENV=development

# Session Secret
SESSION_SECRET=your_random_secret_key_here

# MongoDB
# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/yt-orchestrator
# For MongoDB Atlas (Cloud):
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/?retryWrites=true&w=majority&appName=<app-name>
MONGODB_API_KEY=your_mongodb_api_key_here
MONGODB_PUBLIC_API_KEY=your_mongodb_public_api_key_here

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# OAuth Redirect URI
# Google Cloud Console の「承認済みのリダイレクト URI」に登録する値と完全一致させてください。
# 例: http://localhost:3000/api/auth/google/callback
BACKEND_URL=http://localhost:3000
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# YouTube Data API key (used for seeding demo data)
YOUTUBE_API_KEY=your_youtube_data_api_key_here

# OpenAI API for AI recommendations
OPENAI_API_KEY=your_openai_api_key_here

# CORS
FRONTEND_URL=http://localhost:5175

# Background Cache Update Job
# Enable/disable automatic cache updates (uses YouTube API quota)
# Set to 'true' to enable, anything else to disable
ENABLE_CACHE_UPDATE_JOB=false

# Run cache update once on backend startup (opt-in)
# NOTE: This can consume quota quickly depending on subscriptions/playlists.
RUN_CACHE_UPDATE_ON_STARTUP=false

# If RUN_CACHE_UPDATE_ON_STARTUP=true, control whether it runs in "force" mode.
# force=true triggers heavier refresh logic.
FORCE_CACHE_UPDATE_ON_STARTUP=false

# Background Job Schedule (cron format) - only used if ENABLE_CACHE_UPDATE_JOB=true
# Default: every 30 minutes (0 */30 * * * *)
# For testing: every 5 minutes (*/5 * * * *)
CACHE_UPDATE_SCHEDULE=0 */30 * * * *
