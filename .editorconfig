root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files (JavaScript, TypeScript, JSON, CSS, HTML)
[*.{js,jsx,ts,tsx,json,css,scss,html,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Environment files
[*.env*]
insert_final_newline = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
